<table class="table table-striped table-hover">
  <thead>
    <tr>
      {{#each columns as |column|}}
        <th>
          {{column.label}}
        </th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#each listItems as |listItem|}}
      <tr>
        {{#each listItem as |column|}}
          <td>
            {{format-value column.value}}
          </td>
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>